<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hello.mytrack.Main3Activity"
    android:background="#4172d4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passport Number"
        android:id="@+id/passno"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:inputType="text"
            android:height="15dp"
            android:layout_marginTop="19dp"
            android:id="@+id/pass"
            android:textColor="#0d0d0d"
            android:background="#fbfbfb"
            android:paddingLeft="30sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISA number"
        android:id="@+id/visano"
        android:layout_below="@+id/l1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:id="@+id/l2"
        android:layout_below="@+id/visano">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:height="15dp"
            android:layout_below="@+id/VISA"
            android:layout_marginTop="3dp"
            android:id="@+id/visa"
            android:textColor="#0d0d0d"
            android:background="#fbfbfb"
            android:paddingLeft="30sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:layout_marginTop="14sp"
        android:text="Personal Details"
        android:id="@+id/pd"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@+id/pd"
        android:layout_marginTop="20sp"
        >
        <LinearLayout
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#faf5f5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:id="@+id/uname"
                android:paddingLeft="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:height="15dp"
                android:layout_below="@+id/uname"
                android:layout_marginTop="3dp"
                android:id="@+id/username"
                android:textColor="#0d0d0d"
                android:background="#4b058bdf"
                android:paddingLeft="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail:"
                android:id="@+id/mail"
                android:paddingLeft="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:height="15dp"
                android:layout_below="@+id/mail"
                android:layout_marginTop="3dp"
                android:id="@+id/mailid"
                android:textColor="#0d0d0d"
                android:background="#4b058bdf"
                android:paddingLeft="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number:"
                android:id="@+id/mob"
                android:paddingLeft="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:height="15dp"
                android:layout_below="@+id/mob"
                android:layout_marginTop="3dp"
                android:id="@+id/b4"
                android:textColor="#0d0d0d"
                android:background="#4b058bdf"
                android:paddingLeft="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Name:"
                android:id="@+id/country"
                android:paddingLeft="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:height="15dp"
                android:layout_below="@+id/country"
                android:layout_marginTop="3dp"
                android:id="@+id/b5"
                android:textColor="#0d0d0d"
                android:background="#4b058bdf"
                android:paddingLeft="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Code:"
                android:id="@+id/countrycode"
                android:paddingLeft="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:height="15dp"
                android:layout_below="@+id/countrycode"
                android:layout_marginTop="3dp"
                android:id="@+id/b6"
                android:textColor="#0d0d0d"
                android:background="#4b058bdf"
                android:paddingLeft="30sp"
                />

        </LinearLayout>




        />

    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="345sp"
        android:layout_marginLeft="123sp"
        android:id="@+id/ok"
        />
</RelativeLayout>
